{% extends "partials/base.html.twig" %}
{% block title %}Register{% endblock %}

{% block header %}
{% set myheader= {
   'title': '<i class="fa fa-address-book "></i> Register',
   'text':  'Register to manage json flows entries',
} %}
{{ parent() }}
{% endblock %}

{% block content %}
<div class="container">

   <form method="post">
      <div class="form-group">
         <label for="username">Username</label>
         <input class="form-control" name="username" type="text" required="required">
      </div>

      <div class="form-group">
         <label for="password">Password</label>
         <input class="form-control" name="password" type="password" required="required">
      </div>

      <div class="form-warn">
         <table class="table_register_passw_conditions">
            <tr>
               <td>
                  <ul>
                     <li>Password must be at least 8 characters.</li>
                     <li>Password must have at least one uppercase letter.</li>
                  </ul>
               </td>
               <td>
                  <ul>
                     <li>Password must have at least one lowercase letter.</li>
                     <li>Password must have at least one digit.</li>
                  </ul>
               </td>
            </tr>
         </table>
      </div>

      <div class="form-group">
         <label for="mail">E-mail</label>
         <input class="form-control" name="mail" type="email" required="required">
      </div>

      <button type="submit" class="btn btn-outline-primary">Register</button>

      {{ csrf.field | raw }}
   </form>

</div>
{% endblock %}

{% block userscripts %}
{{ parent() }}

<script src='https://www.google.com/recaptcha/api.js'></script>

{% endblock %}

